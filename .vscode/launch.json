{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug FastAPI (Uvicorn)",
      "type": "python",
      "request": "launch",
      "module": "uvicorn",
      "args": ["aurora_platform.api.kg_endpoints:app", "--reload", "--port", "8000"],
      "env": { "PYTHONPATH": "${workspaceFolder}", "DATABASE_URL": "postgresql://postgres:postgres@localhost:5432/aurora" },
      "console": "integratedTerminal",
      "justMyCode": true
    }
  ]
}
